<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head', {title: 'Search'}) %>
</head>

<body class="search">
<%- include('partials/navbar', {user: user}) %>
<div class="main-content">
    <div class="container mt-5 mb-4">
        <div class="align-items-center mb-4">
            <h1>Search</h1>
            <h2 class="h5">Search templates by name.</h2>
        </div>
        <form class=" mt-4 needs-validation" method="get" action="/search" novalidate>
            <div class="form-group ml-0 mr-3">
                <label for="search-name" class="sr-only">Name</label>
                <div class="input-group">
                    <input name="q" type="text" class="form-control form-control-lg form-control-dark" id="search-name"
                           placeholder="Search for templates..." value="<%= query %>" required>
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-dark btn-lg">Search</button>
                    </div>
                </div>
            </div>
        </form>
        <div class="row mt-4">
            <% if (templates.length === 0) { %>
                <div class="col text-center">
                    <p class="display-3">:(</p>
                    <p class="h5 mt-4">No result found.</p>
                </div>
            <% } else { %>
                <% for (let [index, element] of templates.entries()) { %>
                    <div class="col-12 col-md-6 col-lg-4">
                        <%- include('partials/card', {template: element}) %>
                    </div>
                <% } %>
            <% } %>
        </div>
        <div class="mt-4 text-center">
            <a role="button" class="btn btn-secondary mb-0<%= page === 1 ? ' disabled' : '' %>"
               href="/search?q=<%= query %>&page=<%= page - 1 %>">Previous</a>
            <a role="button" class="btn btn-secondary mb-0 ml-2"
               href="/search?q=<%= query %>&page=<%= page + 1 %>">Next</a>
        </div>
    </div>
    <%- include('partials/footer') %>
</div>
<%- include('partials/foot') %>
</body>

</html>
